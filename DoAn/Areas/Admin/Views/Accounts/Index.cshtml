@model IEnumerable<DoAn.Models.Accounts>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="card shadow mb-4" style="max-width: 1240px">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <a href="@Url.Action("Create","Accounts")" style="float:right">Thêm mới</a>
            </h6>
            
        </div>
        <div class="card-body">
            <h4>Danh sách Tài khoản</h4>
            <div class="table-responsive">

                <table class="table table-bordered">
                    <tr>
                        <th>
                            Username
                        </th>
                        <th>
                            Mật khẩu
                        </th>
                        <th>
                            Số điện thoại
                        </th>
                        <th>
                            Email
                        </th>

                        <th>
                            Hoạt động
                        </th>
                        <th>
                            Họ tên
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastLogin)
                        </th>
                        <th>
                            Ngày tạo
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Avatar)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Roles.RoleName)
                        </th>
                        <th>Chức năng</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Password)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Active)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastLogin)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateDate)
                            </td>

                            <td>
                                <img src="~/Assets/Client/images/@item.Avatar" width="100px" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Roles.RoleName)
                            </td>
                            <td style="width: 160px">
                                @Html.ActionLink("Sửa", "Edit", new { id = item.AccountID }) |
                                @Html.ActionLink("Chi tiết", "Details", new { id = item.AccountID }) |
                                @Html.ActionLink("Xóa", "Delete", new { id = item.AccountID })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>