            </div>
        }
    </div>
</div>
<div class="pagination-container text-center mt-4" ">
    <span class="pagination-text">Trang @(Model.PageNumber) / @(Model.PageCount)</span>

    <ul class="pagination" style=" padding-left: 70%; padding-bottom: 5%; padding-top:3%">
        @if (Model.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("AllChamSocDa", new { page = Model.PageNumber - 1 })">&laquo; Trước</a>
            </li>
        }

        @for (int i = 1; i <= Model.PageCount; i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" href="@Url.Action("AllChamSocDa", new { page = i })">@i</a>
            </li>
        }

        @if (Model.HasNextPage)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("AllChamSocDa", new { page = Model.PageNumber + 1 })">Tiếp theo &raquo;</a>
            </li>
        }
    </ul>
</div> 




