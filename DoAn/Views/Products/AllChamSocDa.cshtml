<div class="container">
    <div class="row main-product">
        @foreach (var item in Model)
        {
            <div class="col-3 product-tdm">
                <div class="slideshow-container ">
                    <img src="~/Assets/Client/images/@item.Thumb" class="img-products">
                    <div class="title-product">
                        <a href="#">
                            <h4>@Html.DisplayFor(modelItem => item.Category.CateName)</h4>
                            <h5>@item.ProductName</h5>
                        </a>
                    </div>
                    <div class="link-products-detail">
                        <a class="product-details" href="@Url.Action("XemChiTiet", "Products", new { @id = item.ProductID})">
                            Xem Chi Tiết
                        </a>
                        <a class="product-details" href="@Url.Action("ThemGioHang", "Cart", new { @ms = item.ProductID, @strURL = Request.Url.ToString()})" style="border: 0">
